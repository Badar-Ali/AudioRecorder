<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".translatedList">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorBlack"
        android:elevation="4dp"
        app:titleTextColor="@color/colorWhite"
        app:navigationIcon="@drawable/ic_arrow_back_white_14dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        tools:ignore="MissingConstraints" />


    <TextView
            android:id="@+id/empty"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="5dp"
            tools:ignore="MissingConstraints" />


    <TextView
        android:id="@+id/fromLang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:text="fromLanguage"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="20dp"
        android:textStyle="bold"


        app:layout_constraintBottom_toTopOf="@+id/fromData"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/toLang"
        app:layout_constraintTop_toBottomOf="@+id/empty"/>

    <TextView
        android:id="@+id/nowords"
        android:text="No Useful words were found in the audio"
        android:textColor="@color/colorBlack"
        android:textStyle="bold"
        android:textSize="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:gravity="center"
        android:visibility="gone"
        android:padding="5dp"
        android:layout_margin="5dp"
        app:layout_constraintTop_toTopOf="parent"/>


    <TextView
        android:id="@+id/toLang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:text="toLanguage"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/toData"
        app:layout_constraintLeft_toRightOf="@+id/fromLang"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/empty" />

    <ListView
                app:layout_constraintTop_toBottomOf="@+id/fromLang"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/toData"
                app:layout_constraintLeft_toLeftOf="parent"
                android:id="@+id/fromData"
                android:layout_width="170dp"
                android:foregroundGravity="center_horizontal"
                android:layout_height="420dp"
                android:textAlignment="center"
                android:background="#ffffff"
                android:layout_margin="5dp"
                android:padding="5dp"/>

    <TextView
                android:id="@+id/separator"
                android:layout_width="3dp"
                android:layout_height="410dp"
                android:background="#000000"
                app:layout_constraintLeft_toRightOf="@+id/toData"
                app:layout_constraintRight_toLeftOf="@+id/fromData"
                app:layout_constraintTop_toBottomOf="@+id/toLang"
                app:layout_constraintBottom_toBottomOf="parent"/>

    <ListView
            app:layout_constraintTop_toBottomOf="@+id/toLang"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/fromData"
            app:layout_constraintRight_toRightOf="parent"
            android:foregroundGravity="center_horizontal"
            android:id="@+id/toData"
            android:layout_width="170dp"
            android:layout_height="420dp"
            android:textAlignment="center"
            android:background="#ffffff"
            android:layout_margin="5dp"
            android:padding="5dp"/>

    <!--
              <TextView
                  android:id="@+id/fromData"
                  android:layout_width="100dp"
                  android:layout_height="match_parent"
                  android:hint="Audio Data"
                  android:textAlignment="center"
                  android:background="#ffffda"
                  android:layout_margin="10dp"
                  />

      -->
</android.support.constraint.ConstraintLayout>